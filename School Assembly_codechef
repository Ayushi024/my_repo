#include<stdio.h>

int main() 
{
	int T;
	int N;
	int max=0;
	    scanf("%d",&N);
	    int a[N];
	    for(int i=0;i<N;i++)
      {
	        scanf("%d",&a[i]);
	    }
	     int count=0; 
        for(int i=0;i<N;i++)
	          {
	              if(a[i]>max)
	         {   
	                  count=count+1;
	                  max=a[i];
	         }
	         }
	          printf("%d\n",count);

	return 0;
}



