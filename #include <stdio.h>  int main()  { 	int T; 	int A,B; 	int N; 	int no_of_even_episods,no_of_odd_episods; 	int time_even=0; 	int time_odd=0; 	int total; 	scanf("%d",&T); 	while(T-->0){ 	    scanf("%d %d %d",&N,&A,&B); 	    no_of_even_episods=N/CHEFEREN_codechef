#include <stdio.h>

int main() 
{
	int T;
	int A,B;
	int N;
	int no_of_even_episods,no_of_odd_episods;
	int time_even=0;
	int time_odd=0;
	int total;
	scanf("%d",&T);
	while(T-->0){
	    scanf("%d %d %d",&N,&A,&B);
	    no_of_even_episods=N/2;
	    no_of_odd_episods=N-no_of_even_episods;
	    time_even=no_of_even_episods*A;
	    time_odd=no_of_odd_episods*B;
	    total=time_odd+time_even;
	    printf("%d\n",total);
	}
	return 0;
}

